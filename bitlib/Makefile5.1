# makefile for bitlib

CFLAGS += -W -Wall -O2 -fPIC -I/usr/include/lua5.1

OBJS=lbitlib.o
SRCS=lbitlib.c
AR=ar rcu

T=bit.a
V=0

all: $T

# shared libraries (for Linux)
so: $T
	$(CC) $(CFLAGS) -o bit.so.$V -shared *.o -llua5.1
	ln -s bit.so.$V bit.so

$T: $(OBJS)
	$(AR) $@ $(OBJS)

clean:
	rm -f $(OBJS) $T *.so*
